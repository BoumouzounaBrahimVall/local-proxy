{
  "name": "local-proxy",
  "version": "1.0.0",
  "description": "Local development proxy with scenario-based mocking",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "local-proxy": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "scripts": {
    "dev": "ts-node src/cli.ts",
    "build": "tsc",
    "start": "node dist/cli.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "proxy",
    "mock",
    "api",
    "development",
    "testing",
    "scenarios"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "commander": "^14.0.3",
    "dotenv": "^16.4.5",
    "express": "^5.2.1",
    "http-proxy-middleware": "^3.0.5",
    "zod": "^4.3.6"
  },
  "pnpm": {
    "overrides": {
      "minimatch": ">=10.2.1",
      "ajv": ">=8.18.0"
    }
  },
  "devDependencies": {
    "@eslint/js": "10.0.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@tsconfig/strictest": "^2.0.8",
    "@types/express": "^5.0.6",
    "@types/node": "^25.3.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "10.0.1",
    "globals": "^17.3.0",
    "jiti": "^2.6.1",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  }
}
